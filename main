  write.write("Press s to continue",font=font_setup2)
  wn.onkeypress(food_choice_fish, "s")

# Having user choose what pet they want
def enter_shop():
  bubble.clear()
  wn.clear()
  wn.bgpic('background.gif')
  bubble2.goto(0,-175)
  bubble2.shape('bubble2.gif')
  bubble2.penup()

  asking_user.hideturtle()
  fish_pic.penup()
  fish_pic.goto(-150,90)
  fish_pic.shape('fish.gif')

  frog_pic.penup()
  frog_pic.goto(150,100)
  frog_pic.shape('froggy.gif')

  plat_pic.penup()
  plat_pic.goto(-20,0)
  plat_pic.shape('platypus.gif')

  key_press.hideturtle()
  key_press.penup()
  key_press.goto(-180,-123)
  key_press.write("Choose what pet you want", font=font_setup)
  key_press.goto(-65,-150)
  key_press.write("Click to choose!", font=font_setup2 )
  frog_pic.onclick(clicked_frog, btn=1)
  plat_pic.onclick(clicked_plat, btn=1)
  fish_pic.onclick(clicked_fish, btn=1)

# Having user choose food
def food_choice_plat():
  wn.clear()
  wn.bgpic('aisle.gif')
  plat_pic2.goto(-200,135)
  plat_pic2.shape('platypus.gif')
  write.clear()
  plat_food.penup()
  fish_food.penup()
  frog_food.penup()
  bubble4.penup()
  raisins.penup()
  write.penup()
  write.hideturtle()
  plat_food.goto(100,110)
  plat_food.shape('shrimp.gif')
  fish_food.goto(120,-10)
  fish_food.shape('fish food.gif')
  frog_food.goto(-70,100)
  frog_food.shape('hopper.gif')
  raisins.goto(-70, -20)
  raisins.shape('raisins.gif')
  bubble4.goto(0,-175)
  bubble4.shape('bubble4.gif')
  write.goto(-140,-120)
  write.write("Pick your pets food!", font= font_setup)
  write.goto(-153, -143)
  write.write("Click and choose the correct food", font=font_setup2)
  plat_food.onclick(correct_choice_plat,btn=1)
  fish_food.onclick(wrong_choice, btn=1)
  frog_food.onclick(wrong_choice,btn=1)
  raisins.onclick(wrong_choice,btn=1)
def food_choice_fish():
  wn.clear()
  wn.bgpic('aisle.gif')
  fish_pic2.goto(-200,130)
  fish_pic2.shape('fish.gif')
  write.clear()
  plat_food.penup()
  fish_food.penup()
  frog_food.penup()
  bubble4.penup()
  raisins.penup()
  write.penup()
  write.hideturtle()
  plat_food.goto(100,110)
  plat_food.shape('shrimp.gif')
  fish_food.goto(120,-10)
  fish_food.shape('fish food.gif')
  frog_food.goto(-70,100)
  frog_food.shape('hopper.gif')
  raisins.goto(-70, -20)
  raisins.shape('raisins.gif')
  bubble4.goto(0,-175)
  bubble4.shape('bubble4.gif')
  write.goto(-140,-120)
  write.write("Pick your pets food!", font= font_setup)
  write.goto(-153, -143)
  write.write("Click and choose the correct food", font=font_setup2)
  raisins.onclick(wrong_choice,btn=1)
  plat_food.onclick(wrong_choice, btn=1)
  frog_food.onclick(wrong_choice,btn=1)
  fish_food.onclick(correct_choice_fish,btn=1)
def food_choice_frog():
  wn.clear()
  wn.bgpic('aisle.gif')
  write.clear()
  frog_pic2.goto(-200,150)
  frog_pic2.shape('froggy.gif')
  plat_food.penup()
  fish_food.penup()
  frog_food.penup()
  bubble4.penup()
  raisins.penup()
  write.penup()
  write.hideturtle()
  plat_food.goto(100,110)
  plat_food.shape('shrimp.gif')
  fish_food.goto(120,-10)
  fish_food.shape('fish food.gif')
  frog_food.goto(-70,100)
  frog_food.shape('hopper.gif')
  raisins.goto(-70, -20)
  raisins.shape('raisins.gif')
  bubble4.goto(0,-175)
  bubble4.shape('bubble4.gif')
  write.goto(-140,-120)
  write.write("Pick your pets food!", font= font_setup)
  write.goto(-153, -143)
  write.write("Click and choose the correct food", font=font_setup2)
  plat_food.onclick(wrong_choice, btn=1)
  fish_food.onclick(wrong_choice,btn=1)
  raisins.onclick(wrong_choice, btn=1)
  frog_food.onclick(correct_choice_frog, btn=1)

# What happens when user chooses wrong item
def wrong_choice(x,y):
  write.clear()
  write.goto(-170,-120)
  write.pencolor("red")
  write.write("Wrong choice pick again!", font=font_setup)

#What happens when user chooses correct item (frog,plat,fish)
def correct_choice_frog(x,y):
  fish_food.hideturtle()
  plat_food.hideturtle()
  raisins.hideturtle()
  frog_food.penup()
  frog_food.goto(-180,0)
  write.clear()
  write.goto(-100,-120)
  write.pencolor("green")
  write.write("Correct food choice!", font=font_setup)
  write.goto(-80,-145)
  write.pencolor("black")
  write.write("press s to continue", font=font_setup2)
  wn.onkeypress(accessories_frog, "s")
def correct_choice_plat(x,y):
  frog_food.hideturtle()
  fish_food.hideturtle()
  raisins.hideturtle()
  plat_food.penup()
  plat_food.goto(-180,0)
  write.clear()
  write.goto(-100,-120)
  write.pencolor("green")
  write.write("Correct food choice!", font=font_setup)
  write.goto(-80,-145)
  write.pencolor("black")
  write.write("press s to continue", font=font_setup2)
  wn.onkeypress(accessories_plat, "s")
def correct_choice_fish(x,y):
  plat_food.hideturtle()
  frog_food.hideturtle()
  raisins.hideturtle()
  fish_food.penup()
  fish_food.goto(-180,-20)
  write.clear()
  write.goto(-100,-120)
  write.pencolor("green")
  write.write("Correct food choice!", font=font_setup)
  write.goto(-80,-145)
  write.pencolor("black")
  write.write("press s to continue", font=font_setup2)
  wn.onkeypress(accessories_fish, "s")

#Having user choose accesories
def accessories_frog():
  wn.clear()
  wn.bgpic('accesories.gif')
  frog_pic4.hideturtle()
  frog_pic4.goto(-200,150)
  frog_pic4.shape('froggy.gif')
  frog_pic4.showturtle()
  frog_food2.hideturtle()
  frog_food2.shape('hopper.gif')
  frog_food2.penup()
  frog_food2.goto(-180,-20)
  frog_food2.showturtle()
  pad.goto(50,-10)
  pad.shape('pad.gif')
  pineapple.goto(-50,150)
  pineapple.shape('pineapple.gif')
  fedora.goto(5, 70)
  fedora.shape('fedora.gif')
  bubble_4.shape('bubble_4.gif')
  bubble_4.penup()
  bubble_4.goto(15,-160)
  bubble_4.showturtle()
  write.goto(-140,-120)
  write.write("Pick your accessory!", font= font_setup)
  fedora.onclick(chosen_fedora)
  pineapple.onclick(chosen_pineapple)
  pad.onclick(chosen_pad)
def accessories_fish():
  wn.clear()
  wn.bgpic('accesories.gif')
  fish_food2.hideturtle()
  fish_food2.shape('fish food.gif')
  fish_food2.penup()
  fish_food2.goto(-180,0)
  fish_food2.showturtle()
  fish_pic4.hideturtle()
  fish_pic4.goto(-200,130)
  fish_pic4.shape('fish.gif')
  fish_pic4.showturtle()
  pad.goto(50,-10)
  pad.shape('pad.gif')
  pineapple.goto(-50,150)
  pineapple.shape('pineapple.gif')
  fedora.goto(5, 70)
  fedora.shape('fedora.gif')
  bubble_4.shape('bubble_4.gif')
  bubble_4.penup()
  bubble_4.goto(15,-160)
  bubble_4.showturtle()
  write.goto(-140,-120)
  write.write("Pick your accessory!", font= font_setup)
  fedora.onclick(chosen_fedora)
  pineapple.onclick(chosen_pineapple)
  pad.onclick(chosen_pad)
def accessories_plat():
  wn.clear()
  wn.bgpic('accesories.gif')
  plat_food2.hideturtle()
  plat_food2.shape('shrimp.gif')
  plat_food2.penup()
  plat_food2.goto(-180,0)
  plat_food2.showturtle()
  plat_pic4.shape('platypus.gif')
  plat_pic4.hideturtle()
  plat_pic4.goto(-200,135)
  plat_pic4.showturtle()
