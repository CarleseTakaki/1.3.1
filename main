  pineapple.onclick(chosen_pineapple)
  pad.onclick(chosen_pad)

# What happens when user chooses accesssories
def chosen_pad(x,y):
  pineapple.hideturtle()
  fedora.hideturtle()
  pad.goto(-180,-70)
  write.goto(-80,-145)
  write.pencolor("black")
  write.write("press s to continue", font=font_setup2)
  wn.onkeypress(checkout, "s")
def chosen_fedora(x,y):
  pineapple.hideturtle()
  pad.hideturtle()
  fedora.goto(-180,-70)
  write.goto(-80,-145)
  write.pencolor("black")
  write.write("press s to continue", font=font_setup2)
  wn.onkeypress(checkout, "s")
def chosen_pineapple(x,y):
  pad.hideturtle()
  fedora.hideturtle()
  pineapple.goto(-180,-70)
  write.goto(-80,-145)
  write.pencolor("black")
  write.write("press s to continue", font=font_setup2)
  wn.onkeypress(checkout, "s")

def checkout():
  wn.clear()
  wn.bgpic('check_out.gif')
  global name_of_pet
  money.hideturtle()
  money.penup()
  for i in range(4):
    x=0
    y=0
    moneyyy = [money,money2,money3]
    z= moneyyy[y]
    z.goto(x,45)
    z.shape('money.gif')
    z.showturtle()
    x-=15
    y+=1
  bubble4_.clear()
  bubble4_.shape('bubble4_.gif')
  bubble4_.penup()
  bubble4_.goto(0,-175)
  bubble4_.showturtle()
  write.goto(-217,-125)
  write.write("Congratulations on your new pet", font= font_setup)
  pet_name.hideturtle()
  pet_name.clear()
  pet_name.pencolor("purple")
  pet_name.goto(-200, -150)
  pet_name.write(name_of_pet, font=font_setup3)
  write.goto(-40,-150)
  write.write("and puchases", font= font_setup3)
  write.goto(-80,-200)
  write.pencolor("black")
  write.write("press s to continue", font=font_setup2)
  wn.onkeypress(close_page, "s")


#Having User enter the pet shop from outside
def outside():
  title.clear()
  wn.clear()
  wn.bgpic('outside.gif')
  bubble.penup()
  bubble.goto(15,-140)
  bubble.shape('bubble.gif')
  write.penup()
  write.hideturtle()
  write.goto(-180,-125)
  write.write("✿  Bubba's Pet Store™ ✿", font=font_setup3)
  write.goto(-95,-147)
  write.write("press s to go inside", font=font_setup2)
  wn.onkeypress(enter_shop, "s")

#-------starting screen
open_page()
wn.onkeypress(outside,"s")
wn.mainloop()
