#-------Import statements
import turtle as trtl
import random as rand
wn = trtl.Screen()

#------adding pictures
wn.addshape('fish.gif')
wn.addshape('platypus.gif')
wn.addshape('froggy.gif')
wn.addshape('hopper.gif')
wn.addshape('bubble.gif')
wn.addshape('pad.gif')
wn.addshape('shrimp.gif')
wn.addshape('pineapple.gif')
wn.addshape('fedora.gif')
wn.addshape('fish food.gif')
wn.addshape('outside.gif')
wn.addshape('bubble2.gif')
wn.addshape('raisins.gif')
wn.addshape('bubble4.gif')
wn.addshape('aisle.gif')
wn.addshape('bubble_4.gif')
wn.addshape('bubble4_.gif')
wn.addshape('money.gif')
wn.listen()

#-----font setups
font_setup3 = ("Helvetica", 20, "bold")
font_setup = ("Helvetica", 20, "bold")
font_setup2 = ("Helvetica", 15, "normal")
font_setup4 = ("courier", 60, "bold")
font_setup5 = ("Helvetica", 20, "normal")

#--------Creating turtles
asking_user = trtl.Turtle()
fish_pic = trtl.Turtle()
plat_pic = trtl.Turtle()
frog_pic = trtl.Turtle()
key_press = trtl.Turtle()
bubble = trtl.Turtle()
bubble2 = trtl.Turtle()
bubble3 = trtl.Turtle()
bubble4 = trtl.Turtle()
bubble_4 = trtl.Turtle()
bubble4_ = trtl.Turtle()
pet_name = trtl.Turtle()
plat_food = trtl.Turtle()
frog_food = trtl.Turtle()
fish_food = trtl.Turtle()
plat_food2 = trtl.Turtle()
frog_food2 = trtl.Turtle()
fish_food2 = trtl.Turtle()
raisins = trtl.Turtle()
write = trtl.Turtle()
fish_pic2 = trtl.Turtle()
plat_pic2 = trtl.Turtle()
frog_pic2 = trtl.Turtle()
fish_pic3 = trtl.Turtle()
plat_pic3 = trtl.Turtle()
frog_pic3 = trtl.Turtle()
fish_pic4 = trtl.Turtle()
plat_pic4 = trtl.Turtle()
frog_pic4 = trtl.Turtle()
fish_pic5 = trtl.Turtle()
plat_pic5 = trtl.Turtle()
frog_pic5 = trtl.Turtle()
fedora = trtl.Turtle()
pineapple = trtl.Turtle()
pad = trtl.Turtle()
title = trtl.Turtle()
money = trtl.Turtle()
money2 = trtl.Turtle()
money3 = trtl.Turtle()
spiral_pen = trtl.Turtle()

#-------functions

#opening page
open_colors = ["aquamarine", "plum", "orange"]
def open_page():
  y=rand.randint(0,2)
  x= open_colors[y]
  wn.bgcolor(x)
  spiral_pen.hideturtle()
  spiral_pen.speed(0)
  spiral_pen.pensize(5)
  for i in range (36):
    spiral_pen.goto(0,0)
    if y == 0:
      spiral_pen.pencolor("yellow")
    elif y ==1:
      spiral_pen.pencolor("pink")
    elif y ==2:
      spiral_pen.pencolor("aqua")
    spiral_pen.forward(400)
    spiral_pen.backward(400)
    spiral_pen.left(10)
  title.hideturtle()
  title.penup()
  if y == 0:
    title.pencolor("salmon")
  elif y ==1:
    title.pencolor("palegreen")
  elif y ==2:
    title.pencolor("white")  
  title.goto(-210,0)
  title.write("Pet Store",font=font_setup4)
  title.goto(-240,-100)
  title.write("a choose your own adventure game", font=font_setup5)
  title.goto(-160,-150)
  title.write("press s to continue", font=font_setup5)

#closing page
close_colors = ["aquamarine", "plum", "orange"]
def close_page():
  wn.clear()
  a=rand.randint(0,2)
  b= close_colors[a]
  wn.bgcolor(b)
  spiral_pen.hideturtle()
  spiral_pen.speed(0)
  spiral_pen.pensize(5)
  for i in range (36):
    spiral_pen.goto(0,0)
    if a == 0:
      spiral_pen.pencolor("yellow")
    elif a ==1:
      spiral_pen.pencolor("pink")
    elif a ==2:
      spiral_pen.pencolor("aqua")
    spiral_pen.forward(400)
    spiral_pen.backward(400)
    spiral_pen.left(10)
  title.hideturtle()
  title.penup()
  if a == 0:
    title.pencolor("salmon")
  elif a ==1:
    title.pencolor("palegreen")
  elif a ==2:
    title.pencolor("white")
  title.goto(-210,0)
  title.write("Pet Store",font=font_setup4)
  title.goto(-230,-100)
  title.write("a choose your own adventure game", font=font_setup5)

#What happens when pet is chosen
def clicked_frog(x,y):
  global name_of_pet
  fish_pic.hideturtle()
  plat_pic.hideturtle()
  frog_pic.goto(-200,150)
  key_press.clear()
  bubble.hideturtle()
  pet_name.penup()
  bubble.showturtle()
  bubble.shape('bubble.gif')
  bubble.penup()
  pet_name.hideturtle()
  pet_name.goto(-100,-150)
  pet_name.write("Name your pet!", font=font_setup3)
  name_of_pet = input("Name: ")
  pet_name.clear()
  pet_name.goto(-227,-125)
  pet_name.write("Congratulations on your new pet: ",font=font_setup3 )
  pet_name.pencolor("purple")
  pet_name.goto(-180, -160)
  pet_name.write(name_of_pet, font=font_setup3)
  wn.bgpic("background.gif")
  write.goto(30,-155)
  write.write("Press s to continue",font=font_setup2)
  wn.onkeypress(food_choice_frog, "s")
def clicked_plat(x,y):
  global name_of_pet
  fish_pic.hideturtle()
  frog_pic.hideturtle()
  plat_pic.goto(-200,135)
  key_press.clear()
  bubble.hideturtle()
  pet_name.penup()
  bubble.showturtle()
  bubble.shape('bubble.gif')
  bubble.penup()
  pet_name.hideturtle()
  pet_name.goto(-100,-150)
