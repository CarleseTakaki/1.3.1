  pet_name.clear()
  pet_name.goto(-227,-125)
  pet_name.write("Congratulations on your new pet: ",font=font_setup3 )
  pet_name.pencolor("purple")
  pet_name.goto(-180, -160)
  pet_name.write(name_of_pet, font=font_setup3)
  wn.bgpic("background.gif")
  write.goto(30,-155)
  write.write("Press s to continue",font=font_setup2)
  wn.onkeypress(food_choice_plat, "s")
def clicked_fish(x,y):
  global name_of_pet
  plat_pic.hideturtle()
  frog_pic.hideturtle()
  fish_pic.goto(-200,130)
  key_press.clear()
  bubble.hideturtle()
  pet_name.penup()
  bubble.showturtle()
  bubble.shape('bubble.gif')
  bubble.penup()
  pet_name.hideturtle()
